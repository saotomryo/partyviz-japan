# Backend API keys (fill these before running)
OPENAI_API_KEY=your-openai-key
GEMINI_API_KEY=your-gemini-key

# Database (psycopg v3 driver)
DATABASE_URL=postgresql+psycopg://partyviz:partyviz@localhost:5432/partyviz

# Admin API (optional: set to protect /admin/* endpoints)
ADMIN_API_KEY=change-me

# Optional: API base override for frontend (Viteなどで利用する場合)
VITE_API_BASE=http://localhost:8000

# Agent toggle: true にするとダミー実装を使用（開発・検証用）
USE_DUMMY_AGENTS=false

# Model selection (optional)
OPENAI_SEARCH_MODEL=gpt-4o-mini-search-preview
OPENAI_SCORE_MODEL=gpt-5-mini
GEMINI_SEARCH_MODEL=models/gemini-2.5-flash
GEMINI_SCORE_MODEL=models/gemini-2.5-flash

# Debug / artifacts
AGENT_DEBUG=false
AGENT_SAVE_RUNS=false

# PoC tuning
PARTY_LIMIT=12
MAX_EVIDENCE_PER_PARTY=5

# Provider selection (recommended: Gemini for grounding/search)
AGENT_SEARCH_PROVIDER=auto   # auto|gemini|openai
AGENT_SCORE_PROVIDER=auto    # auto|gemini|openai
